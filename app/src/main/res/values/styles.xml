<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Light" parent="NavigationViewLight">
        <item name="navigationViewMapStyle">mapbox://styles/rhappie/ck9npzu0j0kp11iqcini0ewg4</item>
        <item name="navigationViewBannerBackground">#32cd32</item>
        <item name="navigationViewPrimary">#32cd32</item>
    </style>

    <style name="Light1" parent="NavigationViewLight">
        <item name="navigationViewMapStyle">mapbox://styles/rhappie/ck9kx58v70px61ipku7vr0dmz</item>
        <item name="navigationViewBannerBackground">#32cd32</item>
        <item name="navigationViewPrimary">#32cd32</item>
    </style>

    <style name="Dark" parent="NavigationViewDark">
        <item name="navigationViewMapStyle">mapbox://styles/rhappie/ck9npzu0j0kp11iqcini0ewg4</item>
        <item name="navigationViewBannerBackground">#32cd32</item>
        <item name="navigationViewPrimary">#32cd32</item>
    </style>

    <style name="Dark1" parent="NavigationViewDark">
        <item name="navigationViewMapStyle">mapbox://styles/rhappie/ck9kx58v70px61ipku7vr0dmz</item>
        <item name="navigationViewBannerBackground">#32cd32</item>
        <item name="navigationViewPrimary">#32cd32</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
